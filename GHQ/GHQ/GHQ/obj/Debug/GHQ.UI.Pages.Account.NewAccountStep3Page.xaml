<?xml version="1.0" encoding="utf-8" ?>
<Base:BasePage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:Base="clr-namespace:GHQ.UI.Pages;assembly=GHQ"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:i18n="clr-namespace:Service.Localization;assembly=GHQ"
              Title="{i18n:Translate PageHeader_NewAccount}"
              xmlns:controls="clr-namespace:Controls;assembly=ProjectX.Common"
             x:Class="GHQ.UI.Pages.Account.NewAccountStep3Page">
  <RelativeLayout>
    <Image  Opacity="0.3"  Aspect="AspectFill"
                RelativeLayout.WidthConstraint=
                  "{ConstraintExpression Type=RelativeToParent, Property=Width}"
                RelativeLayout.HeightConstraint=
                  "{ConstraintExpression Type=RelativeToParent, Property=Height}">
      <Image.Source>
        <OnPlatform x:TypeArguments="ImageSource" WinPhone="Assets/background.png" Android="background.png" iOS="background"/>
      </Image.Source>
    </Image>

    <Grid Style="{StaticResource MainGridStyle}" RelativeLayout.WidthConstraint=
              "{ConstraintExpression Type=RelativeToParent, Property=Width}"
            RelativeLayout.HeightConstraint=
              "{ConstraintExpression Type=RelativeToParent, Property=Height}">

      <Grid.RowDefinitions>
        <RowDefinition Height="40" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>

      <Grid  Grid.Row="0" BackgroundColor="{StaticResource GoldColor}">
        <Image HorizontalOptions="Center" VerticalOptions="Center"  Aspect="AspectFit" >
          <Image.Source>
            <OnPlatform x:TypeArguments="ImageSource" WinPhone="AccountStep3.png" Android="AccountStep3.png" iOS="AccountStep3"/>
          </Image.Source>
        </Image>
      </Grid>

      <StackLayout Grid.Row="1" Orientation="Vertical" IsVisible="{Binding IsLoading}">

        <ActivityIndicator  IsRunning="{Binding IsLoading}" Style="{StaticResource ActivityIndicatorStyle}" />

        <Label TextColor="Black" Text="{i18n:TranslateExtension Text=NewAccount_LoadingMessage}" HorizontalOptions="Center"  VerticalOptions="Center"></Label>

      </StackLayout>

      <Grid  Grid.Row="2" Style="{StaticResource GridContentStyle}">

        <ScrollView>
          <Grid>
            <StackLayout Style="{StaticResource FormStackLayoutStyle}" Orientation="Vertical">

              <StackLayout Orientation="Horizontal" HorizontalOptions="End" Margin="0,0,0,15">

                <Label TextColor="White" Text="{i18n:TranslateExtension Text=NewAccount_Step3Header}" HorizontalOptions="End"  VerticalOptions="Center"></Label>

                <Image Style="{StaticResource HeaderImageStyle}">
                  <Image.Source>
                    <OnPlatform x:TypeArguments="ImageSource" WinPhone="email.png" Android="email.png" iOS="email"/>
                  </Image.Source>
                </Image>

              </StackLayout>

              <controls:InputField IsRequired="True" MaxLength="80" AllowSpecialCharchters="False" ShowValidation="False" ValidationMessage="" Keyboard="Email"
                                   Placeholder="{i18n:Translate Account_Entry_PlaceHolder_Email}"
                                   Title="{Binding NewAccount.NewAccountStep3.Email,Mode=TwoWay}"/>


              <Button Style="{StaticResource ButtonSolidStyle_Small}"  Text="{i18n:TranslateExtension Text=NewAccount_Btn_SendEmailVerficationCode}" Command="{Binding OnVerfiyEmailCommand}" Margin="0,0,0,30"></Button>

              <controls:InputField IsRequired="True" MaxLength="80" AllowSpecialCharchters="False" ShowValidation="False" ValidationMessage=""
                                  Placeholder="{i18n:Translate NewAccount_Entry_PlaceHolder_EmailConfirmation}"
                                  Title="{Binding NewAccount.NewAccountStep3.EmailConfirmatiionCode,Mode=TwoWay}"/>
            </StackLayout>
          </Grid>
        </ScrollView>

      </Grid>

      <Button Grid.Row="3" IsVisible="{Binding NewAccount.NewAccountStep2.HasEmailValidation}"  Style="{StaticResource ButtonSolidStyle}"  VerticalOptions="End" Text="{i18n:TranslateExtension Text=NewAccount_Btn_Next}"  Command="{Binding OnNextThirdStepCommand}"></Button>

      <Grid  Grid.Row="3" IsVisible="{Binding NewAccount.NewAccountStep2.HasEmailValidation,Converter={StaticResource BooleanNegateConverter}"  HorizontalOptions="FillAndExpand" >
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button  Grid.Column="0" Style="{StaticResource ButtonSolidStyle}"  Text="{i18n:Translate Confirm}"  HorizontalOptions="FillAndExpand"  Command="{Binding OnNextThirdStepCommand}"></Button>
        <Button  Grid.Column="1" Style="{StaticResource ButtonLightSolidStyle}"  Text="{i18n:Translate NewAccount_Btn_Skip}"   HorizontalOptions="FillAndExpand"  Command="{Binding OnSkipThirdStepCommand}"></Button>

      </Grid>

    </Grid>
  </RelativeLayout>
</Base:BasePage>