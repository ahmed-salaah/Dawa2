  <RelativeLayout>
    <Image  Opacity="0.3" Aspect="AspectFill"
                RelativeLayout.WidthConstraint=
                  "{ConstraintExpression Type=RelativeToParent, Property=Width}"
                RelativeLayout.HeightConstraint=
                  "{ConstraintExpression Type=RelativeToParent, Property=Height}">
      <Image.Source>
        <OnPlatform x:TypeArguments="ImageSource" WinPhone="Assets/background.png" Android="background.png" iOS="background"/>
      </Image.Source>
    </Image>

    <Grid  Style="{StaticResource MainGridStyle}" RelativeLayout.WidthConstraint=
              "{ConstraintExpression Type=RelativeToParent, Property=Width}"
            RelativeLayout.HeightConstraint=
              "{ConstraintExpression Type=RelativeToParent, Property=Height}">

      <Grid  Grid.Row="0" Style="{StaticResource GridContentStyle}">

        <Grid.RowDefinitions>
          <RowDefinition Height="15" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ActivityIndicator Grid.Row="0" IsRunning="{Binding IsLoading}" Style="{StaticResource ActivityIndicatorStyle}"/>
        <ListView ItemsSource="{Binding Photos}" SelectedItem = "{Binding SelectedPhoto}" ItemTapped = "Handle_ItemTapped" ItemTemplate="{StaticResource ImaaeLibraryTemplate}"  RowHeight="110"  Grid.Row="1" BackgroundColor="#fef5ec"/>

      </Grid>
    </Grid>
  </RelativeLayout>
